# The config file for the daemon portion of the credmgr.
# After making modifications to this file, please restart credmgr to re-read it.

# This file is a sample; to alter a particular value, uncomment it, and set as desired.
# credmgr will use sane defaults, in the absence of this configuration file.


[runtime]
## The directory into which credmgr should write credentials
## This directory will be automatically created if it does not exist.
credentials-directory = /var/lib/credmgr/credentials
port = 443
rest-port = 8080

[logging]
## The directory in which credmgr should create log files.
## This directory will be automatically created if it does not exist.
log-directory = /var/log/credmgr
#
## The filename to be used for credmgr's log file.
log-file = credmgr.log
#
## The default log level for credmgr.
#log-level = DEBUG
#
## credmgr rotates log files. You may specify how many archived log files to keep here.
log-retain = 5
#
## credmgr rotates log files after they exceed a certain size.
## You may specify the file size that results in a log file being rotated here.
log-size = 5000000

[oauth]
oauth-credmgr-token-lifetime = 60
oauth-provider = cilogon
oauth-authorization-url = https://dev.cilogon.org/authorize
oauth-token-url = https://dev.cilogon.org/oauth2/token
oauth-revoke-url = https:/dev.cilogon.org/oauth2/revoke
oauth-user-url = https://cilogon.org/oauth2/userinfo
oauth-scope = openid email profile org.cilogon.userinfo
oauth-jwks-url = https://cilogon.org/oauth2/certs

oauth-client-id = cilogon:/client_id/4cda83483abefad2bfcf785dc9742456
oauth-client-secret = v1SystpgnyMehBu9UURrMNAd0gTFEZZohLtshtopkA6laThlPD4XbdCQqxaAkiSst0RB2FkW_MhuvG_l6qIdgA
oauth-return-url = https://127.0.0.1:443/return/cilogon

[ldap]
ldap-host = ldaps://ldap-test.cilogon.org
ldap-user = uid=readonly_user,ou=system,o=FABRIC,o=CO,dc=cilogon,dc=org
ldap-password = zRVwecZk4wEGUopYGR1J
ldap-search-base = o=FABRIC,o=CO,dc=cilogon,dc=org

[jwt]
jwt-public-key = /etc/credmgr/hostcert.pem
jwt-private-key = /etc/credmgr/hostkey.pem

[database]
